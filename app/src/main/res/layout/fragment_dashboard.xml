                android:layout_width="145dp"
                android:layout_height="match_parent"
                android:paddingLeft="35dp"
                android:paddingTop="10dp"
                android:text="Sensor"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

